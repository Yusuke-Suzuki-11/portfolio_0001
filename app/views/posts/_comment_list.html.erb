<% post.comments.each do |comment| %>
  <div class="mb-2 ">
    <% if comment.user == current_user %>
      <%= link_to "", post_comment_path(post.id, comment), method: :delete, remote: true, class: "delete-comment" %>
    <% end %>
    <span>
      <strong class="posts-hover">
        <%= link_to comment.user.name, user_path(comment.user), class: "no-text-decoration black-color" %>ï¼š
      </strong>
    </span>
    <span>
      <%= comment.comment %>
    </span>
  </div>
<% end %>
