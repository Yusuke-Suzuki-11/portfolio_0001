<div class="sign-main">
<div class="sign-cont">
  <div class="devise-card signup-devise-card ">
    <div class="form-wrap sign-form-wrap">
      <div class="form-group text-center sign-form-group">
        <h1 class="sign-logo">UNIVERSE</h1>
        <p class="sign-copy">ライバルと動画を共有して強くなろう</p>
      </div>
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <div class="form-group signform-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control sign-form-control" %>
        </div>

        <div class="form-group signform-group">
          <%= f.text_field :name, autofocus: true, placeholder: "ユーザーネーム", class: "form-control sign-form-control" %>
        </div>

        <div class="form-group signform-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control sign-form-control" %>
        </div>

        <div class="form-group signform-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control sign-form-control" %>
        </div>

        <div class="action">
          <%= f.submit "登録する", class: "sign-btn " %>
        </div>
      <% end %>


      <p class="sign-devise-link">
        <%= link_to "アカウントをお持ちの方", "#",class: "sign-inlink" %>
      </p>
    </div>
  </div>
</div>
</div>