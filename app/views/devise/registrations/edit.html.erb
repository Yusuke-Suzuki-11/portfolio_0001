<div id="edit-main">
  <%= render "partial/side"%>
  <div class="edit-cont white">
    <div class="devise-card edit-devise-card">
      <div class="form-wrap edit-form-wrap">
        <div class="edit-image-box">
          <%= image_tag avatar_url(@user), class: "edit-user-image" %>
        </div>
        <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true, method: :patch do |f| %>
          <div class="form-group edit-form-group">
            <div>
              <%= f.label :profile_photo, "画像" %>
            </div>
              <%= f.file_field :profile_photo, class: "" %>
            </div>
            <div class="form-group edit-form-group">
              <%= f.label :name, "名前" %>
              <%= f.text_field :name, autofocus: true, class: "form-control edit-form-control" %>
            </div>
            <div class="form-group edit-form-group">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, class: "form-control edit-form-control" %>
            </div>
            <div class="form-group">
              <p>自己紹介</p>
              <%= f.text_area :self_introduction, size: "5x7", class: "form-control" %>
              <div class="form-group  edit-form-bottomborder">
                <div>性別</div>
                <%= f.label '男子' %>
                <%= f.radio_button :gender, :男子 %>
                <%= f.label '女子' ,class:"edit-left" %>
                <%= f.radio_button :gender, :女子 %>
              </div>
              <div class="form-group  edit-select">
                <p>スポーツを選択</p>
                <%= f.select :sports_event, options_for_select(User.sports_events.keys), {}, class: 'form-control input-sm' %>
              </div>
              <div class="form-group  edit-select">
                <p>スポーツステージを選択</p>
                <%= f.select :sports_stage, options_for_select(User.sports_stages.keys),{}, class: "form-control input-sm" %>
              </div>
              <div class="form-group  edit-select">
                <p>スポーツレベルを選択</p>
                <%= f.select :sports_level, options_for_select(User.sports_levels.keys),{}, class: "form-control input-sm" %>
              </div>
              <div class="form-group edit-form-group">
                <%= f.label :password, "パスワード" %>
                <%= f.password_field :password, autofocus: "off", class: "form-control edit-form-control" %>
              </div>
              <div class="form-group edit-form-group">
                <%= f.label :password_confirmation, "パスワードの確認" %>
                <%= f.password_field :password_confirmation, autofocus: "off", class: "form-control edit-form-control" %>
              </div>
              <%= f.submit "変更する", class: "sign-btn" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
