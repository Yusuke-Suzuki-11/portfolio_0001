<div id="edit-main">
  <%= render "partial/side"%>
  <% if @users == nil%>
    <div class="follow-nil-cont">
      <div class="follow-nil-copy white">
        フォローがありません。
      </div>
    </div>
  <% else %>
    <div class="edit-cont">
      <div class="follow-page white">
        <h4>フォロー一覧</h4>
        </div>
      <% @users.each do |user| %>
        <div class="follow-box white">
          <div class="follow-subsub-box">
            <div class="follow-image">
              <%= image_tag default_photo(user).url, class: "post-profile-icon" %>
            </div>
            <div class="follow-subbox">
              <div class="followname">
                <%= link_to user_path(user), class: "no-text-decoration posts-hover" do %>
                  <%= user.name %>
                <%end%>
              </div>
              <div class="follow-link">
                <%= link_to '詳細', user_path(user),class: "follow-link-li" %>
              </div>
              <div class="follow-chat-box">
                <%= form_tag :chat_index, method: :post do %>
                  <input name="user_id" type="hidden" value="<%= user.id %>" />
                  <%= submit_tag 'メッセージ', class: "follow-chat" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

